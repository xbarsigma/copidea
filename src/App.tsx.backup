        willingToContribute: contributorData.willingnessToContribute.join(", "),
        timestamp: new Date(),
      };

      addContributor(ideaId, newContributor);
      setContributorData({
        name: "",
        affiliation: "",
        experienceLevel: "",
        willingnessToContribute: [],
