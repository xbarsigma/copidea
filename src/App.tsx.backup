    const handleContributeSubmit = (e: any, ideaId: string) => {
      e.preventDefault();

      if (
        !contributorData.name.trim() ||
        !contributorData.affiliation.trim() ||
        !contributorData.experienceLevel.trim() ||
        contributorData.willingnessToContribute.length === 0
