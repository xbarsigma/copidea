          </div>
        )}
      </main>
    );
  };

  const renderCurrentPage = () => {
    switch (currentPage) {
      case "home":
        return <HomePage />;
      case "submit":
        return <SubmitPage />;
      case "vote":
        return <VotePage />;
      case "summary":
        return <SummaryPage />;
      default:
        return <HomePage />;
    }
  };

  return (
    <div
      style={{
        minHeight: "100vh",
        background: "#fafafa",
        fontFamily:
          '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif',
      }}
    >
      <Header />
      {renderCurrentPage()}
    </div>
  );
}

export default App;
